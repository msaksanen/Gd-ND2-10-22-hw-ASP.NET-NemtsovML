@using MedContactApp.Helpers;

@model IEnumerable<DoctorDto>

@{
    ViewData["Title"] = "Doctors Table";
}

<a href="~/doctor/create">Add doctor</a>


<Table class="table table-bordered">
    <caption>Doctors Info Table</caption>
    <tr>
        <th>
           Username
        </th>
        <th>
           Email
        </th>
        <th>
           User Id
        </th>
        <th>
           Name
        </th>
        <th>
           Middle Name
        </th>
        <th>
           Surname
        </th>
        <th>
           Age
        </th>
        <th>
           Sex
        </th>
        <th>
            Speciality
        </th>
        <th>
           Address
        </th>
        <th>
           Details
        </th>
    </tr>
    
        

@if (Model.Any())
{
    foreach (var item in Model)
    {
        await Html.RenderPartialAsync("DoctorPartialView", item);
    }
}

</Table>

@Html.GeneratePagintator((int)ViewBag.pageCount)

@section CssStyles
    {
    <style>
       caption {
          caption-side: top;
          text-align: center;
          padding: 10px 0;
          font-size: 14px;}
    </style>
}

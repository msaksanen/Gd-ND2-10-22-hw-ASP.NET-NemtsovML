@model UserDto

@{
    ViewData["Title"] = "Account Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    @if (Model.IsDependent != true)
    {
        <h4>My account data </h4>
      
    }
    else
    {
        <h4>My relative's account data </h4>
    }

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MidName)
        </dd>
       @* <dt class="col-sm-2"> Age (years)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
           Registration Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
    </dl>
</div>
<div>
    <a href="~/userpanel/accsettingsedit/@Model.Id">Edit details</a>
</div>
@if (Model.IsDependent != true)
{
    <div>
    <a href="~/home/index">Back</a>
    </div>
}
else
{
    <div>
    <a href="~/familyaccount/family">Back</a>
    </div>
}

